import random
def play_game():
    print("\nWelcome to the Number Guessing Game!")
    print("I'm thinking of a number between 1 and 100.")
    computer_number = random.randint(1, 100)

    while True:
        user_level_pref = input("Choose a difficulty. Type 'easy' or 'hard': ").lower()
        if user_level_pref in ['easy', 'hard']:
            break
        print("Invalid input. Please type 'easy' or 'hard'.")


    user_lifes = 10 if user_level_pref == 'easy' else 5

    while user_lifes > 0:
        print(f"\nYou have {user_lifes} attempts remaining to guess the number.")
        try:
            number = int(input("Make a guess: "))
        except ValueError:
            print("Please enter a valid number.")
            continue

        if number == computer_number:
            print("🎉 You win! The number was:", computer_number)
            return
        elif number < computer_number:
            print("Too low.")
        else:
            print("Too high.")

        user_lifes -= 1

    print("😞 You lose. The number was:", computer_number)


while True:
    play_game()
    play_again = input("\nDo you want to play again? Type 'yes' or 'no': ").lower()
    if play_again != 'yes':
        print("Thanks for playing! Goodbye 👋")
        break
